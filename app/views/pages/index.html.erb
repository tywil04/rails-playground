        <div class="flex flex-row flex-grow space-x-3">
            <h1 class="leading-[26px]">Buttons:</h1>

            <button class="border border-gray-200 box-border select-none rounded-[6px] bg-gray-100 px-2.5 py-0.5 text-black duration-100 hover:bg-gray-200 hover:border-gray-300 active:bg-gray-300 shadow-inner">
                Regular Button
            </button>
    
            <button class="border border-blue-700 box-border select-none rounded-[6px] bg-blue-600 px-2.5 py-0.5 text-white duration-100 hover:bg-blue-700 hover:border-blue-800 active:bg-blue-800 shadow-inner">
                Blue Button
            </button>
    
            <button class="border border-red-600 box-border select-none rounded-[6px] bg-red-500 px-2.5 py-0.5 text-white duration-100 hover:bg-red-600 hover:border-red-700 active:bg-red-700 shadow-inner">
                Red Button
            </button>
    
            <button class="border border-green-600 box-border select-none rounded-[6px] bg-green-500 px-2.5 py-0.5 text-white duration-100 hover:bg-green-600 hover:border-green-700 active:bg-green-700 shadow-inner">
                Green Button
            </button>
        </div>

        <div class="flex flex-row flex-grow space-x-3">
            <h1 class="leading-[26px]">Dropdowns:</h1>

            <div data-controller="dropdown" data-dropdown-open-class="!opacity-100 !pointer-events-auto !shadow-sm" data-action="pointerleave->dropdown#close">
                <button data-action="click->dropdown#toggle" class="border border-gray-200 box-border select-none rounded-[6px] bg-gray-100 px-2.5 py-0.5 text-black duration-100 hover:bg-gray-200 hover:border-gray-300 active:bg-gray-300 shadow-inner">
                    Regular Dropbown
                </button>
                <div data-dropdown-target="content" class="opacity-0 pointer-events-none h-fit select-none z-10 absolute duration-100 bg-gray-100 border border-gray-200 rounded-[6px] py-1 flex flex-col">
                    <button class="px-2.5 py-0.5 hover:bg-gray-200 active:bg-gray-300 cursor-pointer text-left" data-action="click->dropdown#close">Button</button>
                    <%= link_to "Link To", "/", class: "px-2.5 py-0.5 hover:bg-gray-200 active:bg-gray-300 cursor-pointer text-left" %>
                    <%= button_to "Button To", "/", class: "px-2.5 py-0.5 hover:bg-gray-200 active:bg-gray-300 cursor-pointer text-left" %>
                </div>
            </div>

            <div data-controller="dropdown" data-dropdown-open-class="!opacity-100 !pointer-events-auto !shadow-sm" data-action="pointerleave->dropdown#close">
                <button data-action="click->dropdown#toggle" class="border border-blue-700 box-border select-none rounded-[6px] bg-blue-600 px-2.5 py-0.5 text-white duration-100 hover:bg-blue-700 hover:border-blue-800 active:bg-blue-800 shadow-inner">
                    Blue Dropdown
                </button>
                <div data-dropdown-target="content" class="opacity-0 pointer-events-none h-fit select-none z-10 absolute duration-100 bg-gray-100 border border-gray-200 rounded-[6px] py-1 flex flex-col">
