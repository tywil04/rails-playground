                    <%= link_to "Link To", "/", class: "px-2.5 py-0.5 hover:bg-gray-200 active:bg-gray-300 cursor-pointer text-left" %>
                    <%= button_to "Button To", "/", class: "px-2.5 py-0.5 hover:bg-gray-200 active:bg-gray-300 cursor-pointer text-left" %>
                </div>
            </div>

            <div data-controller="dropdown" data-dropdown-open-class="!opacity-100 !pointer-events-auto !shadow-sm" data-action="pointerleave->dropdown#close">
                <button data-action="click->dropdown#toggle" class="border border-red-600 box-border select-none rounded-[6px] bg-red-500 px-2.5 py-0.5 text-white duration-100 hover:bg-red-600 hover:border-red-700 active:bg-red-700 shadow-inner">
                    Red Dropdown
                </button>
                <div data-dropdown-target="content" class="opacity-0 pointer-events-none h-fit select-none z-10 absolute duration-100 bg-gray-100 border border-gray-200 rounded-[6px] py-1 flex flex-col">
                    <button class="px-2.5 py-0.5 hover:bg-gray-200 active:bg-gray-300 cursor-pointer text-left" data-action="click->dropdown#close">Button</button>
                    <%= link_to "Link To", "/", class: "px-2.5 py-0.5 hover:bg-gray-200 active:bg-gray-300 cursor-pointer text-left" %>
                    <%= button_to "Button To", "/", class: "px-2.5 py-0.5 hover:bg-gray-200 active:bg-gray-300 cursor-pointer text-left" %>
                </div>
            </div>

            <div data-controller="dropdown" data-dropdown-open-class="!opacity-100 !pointer-events-auto !shadow-sm" data-action="pointerleave->dropdown#close">
                <button data-action="click->dropdown#toggle" class="border border-green-600 box-border select-none rounded-[6px] bg-green-500 px-2.5 py-0.5 text-white duration-100 hover:bg-green-600 hover:border-green-700 active:bg-green-700 shadow-inner">
                    Green Dropdown
